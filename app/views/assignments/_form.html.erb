<%= simple_form_for(@assignment) do |f| %>
  <% if @assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
      <% @assignment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    
  <div class="field">
    <%= f.label :title %>
    <%= f.text_area :title %>
  </div> <br>

  <div class="field">
    <%= f.label :quote %>
    <%= f.text_area :quote %>
  </div> <br>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div> <br>

  <div class="field">
    <%= f.label :document %>
    <%= f.file_field :document%> 
  </div>

  <table>
  <tr>
  <td>
    <div class="field">
      <%= f.label :category_id %>
      <%= f.select :category_id, [['Technology'], ['Hospitality'], ['Education'], ['Sports']]  %>
    </div>
  </td>

  <td>
    <div class="field">
      <%= f.label :status %>(Make Private)
      <%= f.check_box :status %>
    </div>
  </td> 
  <td>
    <div class="field">
      <%= f.input :avatar, as: :file %>
    </div>
  </td>
  </tr>
  </table>
  <br>
  <div class="actions">
    <input type="submit" value="Submit idea" name="commit"></input>
  </div>
  
<% end %>


