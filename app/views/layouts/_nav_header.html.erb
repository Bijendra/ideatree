 <header id="header">

	<h1><a style="font-size:25px" href="/assignments">Ideatree</a></h1>
	<nav class="links">
		<ul>
			<% if @browse_color == 1 %>
			<li><a style="color: #00cca3;font-size:20px" href="/assignments">Browse</a></li>
			<% else %>
			<li><a href="/assignments">Browse</a></li>
			<% end %>

			<% if @submit_color == 1 %>
			<li><a style="color: #00cca3;font-size:20px" href="/assignments/new">Submit</a></li>
			<% else %>
			<li><a href="/assignments/new">Submit</a></li>
			<% end %>

			<% if @contribution_color == 1 %>
			<li><a style="color: #00cca3;font-size:20px" href="/contributions">Contributions</a></li>
			<% else %>
			<li><a href="/contributions">Contributions</a></li>
			<% end %>

			<div style="float:right"> 
			<li> <%= form_tag(search_path, :method => "get", :action => "/search", id: "search-form") do %>
				<input type="text" name="query" placeholder="Search" />
				<% end %>
			</li>

			<li>
			 	 <a href="/users/<%= current_user.id %>" ><strong><%= current_user.name ||= current_user.get_display_name %></strong></a>
    	     </li>
			<li >
              <a href="/users/<%= current_user.id %>" class="author" ><%= image_tag current_user.avatar.url(:thumb), :size => "40x45", :style => "padding-top:6px" %> </a>
            </li> 
			<%= render 'devise/menu/login_items' %>
			</div>
		</ul>
		 
	</nav>
	
	
