<div class="main">
    <div class="border-form-div">
        <h2>Sign up</h2>

        <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%#= devise_error_messages! %>
    <div class="form-inputs">
    
        <%= f.input :email, required: true, autofocus: true, placeholder: 'Email address' %>
        <%= f.input :password, required: true, :placeholder => '8 Characters Password' %>
        <%= f.input :password_confirmation, :placeholder => 'Password confirmation',required: true %>
    </div>

    <div class="form-action">
        <%= f.submit "Sign up", :class=>'btn btn-warning' %>
        <%= link_to "Log in", new_session_path(resource_name), :class => 'btn btn-primary'%> 
        <% end %>
    </div>

    </div>
</div>


