<!--main signup form currently in use -->
<div id="full-background">
<div id="main">
        <div class="register_form">
          <h2>Register</h2>
            <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <%#= devise_error_messages! %>
                <div class="form-inputs">
                
                    <%= f.input :email, required: true, autofocus: true, placeholder: 'Email address', label: false %>
                    <%= f.input :password, required: true, :placeholder => '8 Characters Password', label: false %>
                    <%= f.input :password_confirmation, :placeholder => 'Password confirmation',required: true, label: false %>
                </div>

                <div class="form-action">
                    <%= f.submit "Sign up", :class=>'btn btn-warning' %>
                    <%=  link_to "Log in", new_session_path(resource_name), :class => 'btn btn-primary'%> 
                </div>    
            <% end %>
        </div>

    </div>
</div>

<style type="text/css">
    .register_form {
        width: 400px;
        margin: 0 auto;
        max-width: 400px;
        padding: 19px 29px 29px;
        margin: 90px auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
          }

    .form-inputs .form-group input {
        margin-bottom: 10px;
    }

    #full-background{
        background-image: url('assets/idea-discussion.jpeg'); 
        /*position: fixed;*/
        top:0;
        left: 0;
        right: 0;
        bottom: 0;
    }

</style>