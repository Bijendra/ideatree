<div id="full-background">
  <div id="main">   
    <div class="forgot-password">
<h2>Change password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "New password", required: true, autofocus: true, placeholder: "password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false %>
    <%= f.input :password_confirmation, label: "Confirm your new password", placeholder: "password", required: true, label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password" %>
  </div>
<% end %>
<div class="etc-login-form">
        <p>already have an account? <%=  link_to "Log in", new_session_path(resource_name), :class => 'btn btn-primary'%> </p>
        <p>new user? <%= link_to "Create new account", new_user_registration_path, :class => 'btn btn-primary'%></p>
      </div>
</div>
</div>
</div>



