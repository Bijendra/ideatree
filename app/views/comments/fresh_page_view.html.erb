<div id="main">
					    <% post = @assignment %>
							<article class="post">
								<header>
									<div class="title">
										<h2><a href="#"><%= post.title %></a></h2>
										<p><%= post.quote %></p>
									</div>

									<div class="meta">
										<time class="published" datetime="<%= post.created_at.strftime("%d-%m-%Y")%>"><%= post.created_at.strftime("%B %d, %Y") %></time>
										<a href="#" class="author"><span class="name"><%= post.user.get_display_name %></span><img src="<%= post.user.avatar.url(:medium) %>" alt="" /></a>
									</div>
								</header>
								<a href="#" class="image featured"><img src="<%= post.avatar.url(:original) %>" alt="" /></a>

								<p><%= post.description %></p>
								<footer>
									<div>
									<ul class="stats">
										<li><a href="#">Place tags here</a></li>

 										<% if @like_obj %> 
                        					<% likepic,unlikepic = case @like_obj.where(assignment_id: post.id,user_id: current_user.id).first.status 
                            					when true
                                					["thumbs-up","empty_thumbs-down"]
                            					when false
                               						["empty_thumbs-up","thumbs-down"]
                            					when nil
                                					["empty_thumbs-up","empty_thumbs-down"]
                            				end %>
                        					<% like_count = @like_count
                            				unlike_count = @unlike_count %>
                  
                    					<% else %>
                        					<% like_count = 0
                            				unlike_count = 0
                            				likepic,unlikepic = ["empty_thumbs-up","empty_thumbs-down"] %>
                    					<% end %>

                    					<li class="like-count" id="like-<%= post.id %>">
                    						<%= like_count %>  
                    					</li>
                    					<li id="likepic-<%= post.id %>">
                    					<%= link_to image_tag(likepic), like_assignment_path(post,status: true),  class: 'vote', method: :put, remote: true %>
                    					</li>

                   						<li class="unlike-count" id="unlike-<%= post.id %>">
                    						<%= unlike_count %>
                    					</li>
                    					<li id="unlikepic-<%= post.id %>">
                    						<%= link_to image_tag(unlikepic), like_assignment_path(post,status: false), class: 'vote', method: :put , remote: true  %>
                   						</li>
                   						</ul>
                   						</div>
                   						</footer>
										<!-- <li><a href="#" class="icon fa-heart">28</a></li> -->
										<br>
										<div>
										<% if !@comments.blank? %>
										<table style="margin:5px;" class='table' id='comment_table'>
    									<thead>
      									<tr><th>Comments</th></tr>
    									</thead>
    									<tbody id="comment-modal">
      									<% @comments.each do |comment| %>
							           <tr>
											<td> 
												<div style="background:#f1f1f1; border-style: outset; box-shadow: 0 2px 4px 0 rgba(0,0,0,0),0 2px 10px 0 rgba(0,0,0,0.18) !important;" >  
												<p><%= comment.content %></p>
											</td>

          								<% if current_user.id.to_s == comment.user_id.to_s %>
          									<td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          								<% end %> 
										</div>
         								</tr>
         								<% end %>
    									</tbody>
  										</table> 
  										<% end %>
  										</div>
							</article>

						<!-- Pagination -->
							<ul class="actions pagination">
								<li><a href="" class="disabled button big previous">Previous Page</a></li>
								<li><a href="#" class="button big next">Next Page</a></li>
							</ul>

					</div>